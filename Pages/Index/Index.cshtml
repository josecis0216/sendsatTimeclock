@page
@model sendsatTimeclock.Pages.Index.IndexModel

@{
    ViewData["Title"] = "Users";
}

<div>
    <ul class="nav nav-tabs" style="float: left;">
        <li class="nav-item">
            <a class="nav-link" asp-page="/admin">Admin Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-page="./Index/Index">Users</a>
        </li>
    </ul>
    <div class="card" style="width: 100%;">
        <h1>Time clock Users</h1>

        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User[0].LastName)
                    </th>
                    <th></th>
                    <th>Actions</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.User) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a href="#">Week Report</a>
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID">User Info</a>
                    </td>
                    <td>
                        <a href="#">Time Punches</a>
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
    <ul class="nav" style="float: right;">
        <li class="nav-item">
            <a class="nav-link" asp-page="/home">Back to Time Clock</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Logout</a>
        </li>
    </ul>
</div>
